<!DOCTYPE html>
<html>
<head>
    <title>Yüzde Hesaplama Makinesi</title>
</head>
<body>
    <h2>Yüzde Hesaplama Makinesi</h2>
    <label for="sayi">Sayı:</label>
    <input type="number" id="sayi" placeholder="Sayı girin"><br><br>

    <label for="yuzde">Yüzde (%):</label>
    <input type="number" id="yuzde" placeholder="Yüzde girin"><br><br>

    <button onclick="hesapla()">Hesapla</button>

    <h3>Sonuç: <span id="sonuc">-</span></h3>

    <script>
        function hesapla() {
            const sayi = parseFloat(document.getElementById('sayi').value);
            const yuzde = parseFloat(document.getElementById('yuzde').value);

            if (isNaN(sayi) || isNaN(yuzde)) {
                alert("Lütfen geçerli sayılar girin.");
                return;
            }

            const sonuc = sayi * (yuzde / 100);
            document.getElementById('sonuc').innerText = sonuc.toFixed(2);
        }
    </script>
</body>
</html>
